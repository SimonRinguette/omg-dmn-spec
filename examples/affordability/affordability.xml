<Definitions id="affordability" namespace="http://example.org/affordability" xmlns="http://www.omg.org/spec/DMN/20130901" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:n1="http://example.org/affordabilityFunction" name="Affordability example" xsi:schemaLocation="http://www.omg.org/spec/DMN/20130901 dmn3.xsd">
	<Import namespace="http://example.org" importType="http://www.omg.org/spec/FEEL/20140401" locationURI="affordabilityFunction-3.xml"/>
	<ItemDefinition id="tNumber" name="numberType">
		<typeDefinition>number</typeDefinition>
	</ItemDefinition>
	<ItemDefinition id="tRiskCat" name="RiskCatType">
		<typeDefinition>string</typeDefinition>
		<allowedValue>
			<text>"A"</text>
		</allowedValue>
		<allowedValue>
			<text>"B"</text>
		</allowedValue>
		<allowedValue>
			<text>"C"</text>
		</allowedValue>
	</ItemDefinition>
	<ItemDefinition id="tBoolean" name="AffordabilityType">
		<typeDefinition>boolean</typeDefinition>
	</ItemDefinition>
	<ItemDefinition id="tCCF" name="CCFType">
		<typeDefinition>number</typeDefinition>
		<allowedValue>
			<text>0..1</text>
		</allowedValue>
	</ItemDefinition>
	<ItemDefinition id="tApplicantData" name="Applicant Data">
		<typeRef href="#tMonthly"/>
	</ItemDefinition>
	<ItemDefinition id="tMonthly" name="Monthly">
		<itemComponent name="Income">
			<itemDefinition href="#tNumber"/>
		</itemComponent>
		<itemComponent name="Repayments">
			<itemDefinition href="#tNumber"/>
		</itemComponent>
		<itemComponent name="Expenses">
			<itemDefinition href="#tNumber"/>
		</itemComponent>
	</ItemDefinition>
	<Decision id="dec01" name="Post-Bureau Affordability">
		<InformationItem id="_Post-BureauAffordability" name="Post-Bureau Affordability">
			<itemDefinition href="#tBoolean"/>
		</InformationItem>
		<informationRequirement>
			<requiredInput href="#ApplicantData"/>
		</informationRequirement>
		<informationRequirement>
			<requiredDecision href="#Post-bureauRiskCategory"/>
		</informationRequirement>
		<informationRequirement>
			<requiredDecision href="#RequiredMonthlyInstallment"/>
		</informationRequirement>
		<knowledgeRequirement>
			<requiredKnowledge href="affordabilityFunction-3.xml#AffordabilityCalculation"/>
		</knowledgeRequirement>
		<Invocation id="inv01" name="Affordability calculation">
			<binding>
				<LiteralExpression>
					<text>Applicant Data.Monthly.Income</text>
				</LiteralExpression>
				<parameter href="affordabilityFunction-3.xml#mIncome"/>
			</binding>
			<binding>
				<LiteralExpression>
					<text>Applicant Data.Monthly.Repayments</text>
				</LiteralExpression>
				<parameter href="affordabilityFunction-3.xml#mRepayments"/>
			</binding>
			<binding>
				<LiteralExpression>
					<text>Applicant Data.Monthly.Expenses</text>
				</LiteralExpression>
				<parameter href="affordabilityFunction-3.xml#mExpenses"/>
			</binding>
			<binding>
				<LiteralExpression>
					<text>Post-bureau Risk Category</text>
				</LiteralExpression>
				<parameter href="affordabilityFunction-3.xml#riskCat"/>
			</binding>
			<binding>
				<LiteralExpression>
					<text>Required Monthly Installment</text>
				</LiteralExpression>
				<parameter href="affordabilityFunction-3.xml#mInstallment"/>
			</binding>
		</Invocation>
	</Decision>
	<Decision id="RequiredMonthlyInstallment" name="Required Monthly Installment">
		<InformationItem id="_RequiredMonthlyInstallment" name="Required Monthly Installment">
			<itemDefinition href="#tNumber"/>
		</InformationItem>
	</Decision>
	<Decision id="Post-bureauRiskCategory" name="Post-bureau Risk Category">
		<InformationItem id="_Post-bureauRiskCategory" name="Post-bureau Risk Category">
			<itemDefinition href="#tRiskCat"/>
		</InformationItem>
	</Decision>
	<InputData id="ApplicantData" name="Applicant data">
		<InformationItem id="_ApplicantData" name="Applicant data">
			<itemDefinition href="#tApplicantData"/>
		</InformationItem>
	</InputData>
	<InputData id="RequestedProduct" name="Requested Product">
		<InformationItem id="_RequestedProduct" name="Requested Product"/>
	</InputData>
</Definitions>
